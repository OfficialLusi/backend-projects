@{
    ViewData["Title"] = "Conversion of the Temperature";
}

<h2>Convert the Temperature</h2>

<form asp-asp-controller="Home" asp-action="Temperature" method="post">
    <div>
        <label for="value">Value:</label>
        <input type="number" id="value" name="value" step="any" required />
    </div>

    <div>
        <label for="unitFrom">From:</label>
        <select id="unitFrom" name="unitFrom">
            <option value="celsius">Celsius</option>
            <option value="farenheit">Farenheit</option>
            <option value="kelvin">Kelvin</option>
        </select>
    </div>

    <div>
        <label for="unitTo">To:</label>
        <select id="unitTo" name="unitTo">
            <option value="celsius">Celsius</option>
            <option value="farenheit">Farenheit</option>
            <option value="kelvin">Kelvin</option>
        </select>
    </div>

    <button type="submit">Convert</button>

</form>

@if (ViewData["Result"] != null)
{
    <h3>Risultato: @ViewData["Result"]</h3>
}